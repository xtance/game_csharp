<Window x:Class="TrainingPractice_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrainingPractice_02"
        mc:Ignorable="d"
        Title="Пятнашки"
        Width="440"
        ResizeMode="NoResize"
        SizeToContent="Height">
    <Grid Height="500">
        <Button Name="Help" Content="Об игре" Cursor="Hand" HorizontalAlignment="Left" Margin="17,10,0,0" VerticalAlignment="Top" Width="110" Height="30" Background="#FFFFE5F5"/>
        <Button Name="Play" Content="Новая игра" Cursor="Hand" HorizontalAlignment="Stretch" Margin="0,10,0,0" VerticalAlignment="Top" Width="110" Height="30" Background="#FFCCFFE5"/>
        <Button Name="Records" Content="Рекорды" Cursor="Hand" HorizontalAlignment="Right" Margin="0,10,17,0" VerticalAlignment="Top" Width="110" Height="30" Background="#FFFFFFC9"/>
        <TextBlock Name="Info" Margin="0,50,0,0" HorizontalAlignment="Stretch" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" Height="30" Text="..." Background="White" FontSize="16" TextAlignment="Center"/>
        <Grid Name="GridTiles" HorizontalAlignment="Stretch" Height="400" Margin="0,90,0,0" VerticalAlignment="Top" Width="400" Background="#FFF">

        </Grid>
    </Grid>
</Window>
